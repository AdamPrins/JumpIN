
public class Coord {

    //the creation of the indavidual parts of a coord
    private int x;
    private int y;

    //grabbing the x coordinate of object
    public int getX() {
        return this.x;
    }

    //grabbing the y coordinate of object
    public int getY() {
        return this.y;
    }

    //setting the x and y coordinates of the object
    public void setCoord(int x, int y){
        this.x = x;
        this.y = y;
    }
}